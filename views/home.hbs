<div class="row">
  <div class="col-6">
    <h1>Active Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" class="btn btn-primary align-self-center"><i class="bi bi-person-plus"></i> Add New User</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Comment</th>
      <th scope="col" class="text-end"><a class="btn btn-primary" href="/">Home <i class="bi bi-house"></i></a> Action</th>
    </tr>
  </thead>
  <tbody>
   {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.firstname}}</td>
      <td>{{this.lastname}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.comments}}</td>
      <td class="text-end">

         <a href="/view-user/{{this.unique_id}}" type="button" class="btn btn-success btn-small"><i class="bi bi-eye"> </i> View</a>
         <a href="/edit-user/{{this.id}}" type="button" class="btn btn-warning btn-small"><i class="bi bi-pencil"> </i>Edit</a>
         <a href="/delete-user/{{this.unique_id}}" type="submit" class="btn btn-danger btn-small"><i class="bi bi-person-x"> </i>Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>